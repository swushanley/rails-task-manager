<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="contents">
         <h1 class="text-center">Your Tasks</h1>
        <ul class="text-center"><% @tasks.each do |task| %>
          <li>
           <%= link_to task.name.capitalize, task_path(task.id) %>
           <div class="btn btn-info"><%= link_to "Edit", edit_task_path(task.id) %></div>
           <div class="btn btn-info"><%= link_to "Delete", task_path(task), method: :delete %></div>
           </li>
        <% end  %>
        </ul>
        <div class="btn btn-info">
          <h3 class="text-center"><%= link_to "Add a new task", new_task_path() %></h3>
        </div>
      </div>
    </div>
</div>
</div>

