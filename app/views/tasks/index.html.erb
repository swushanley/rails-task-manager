<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<ul><% @tasks.each do |task| %>
  <li>
   <%= link_to task.name, task_path(task.id) %>
   <%= link_to "Edit", edit_task_path(task.id) %>
   <%= link_to "Delete", task_path(task), method: :delete %>
   </li>
<% end  %>
</ul>
<h3><%= link_to "Add a new task", new_task_path() %></h3>
